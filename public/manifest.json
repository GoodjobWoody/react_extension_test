{
  "manifest_version": 3,
  "name": "Smart Resume Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "declarativeContent", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["modalStyles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["resume.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
